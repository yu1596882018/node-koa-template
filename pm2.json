{
  "apps": [
    {
      "name": "app",
      "script": "./main.js",
      "instances": -1,
      "exec_mode": "cluster",
      "watch": false,
      "ignore_watch": ["node_modules", "logs", "data", "scripts"],
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/app-err.log",
      "out_file": "./logs/app-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "max_restarts": 10,
      "restart_delay": 4000,
      "max_memory_restart": "200M"
    }
  ]
}
